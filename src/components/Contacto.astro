---
import Button from "./Button.astro";
---

<section class="contacto__section">
	<div class="contacto__container container--static">
		<h2 class="contacto__titulo" id="contacto">Ponte en Contacto</h2>
		<div class="contacto__content">
			<div class="contacto__form">
				<form
					id="contact-form"
					action="https://api.web3forms.com/submit"
					method="POST"
				>
					<input
						type="hidden"
						name="access_key"
						value="b89f29e2-596c-4143-bb25-adcf3b2c1068"
					/>
					<input
						type="hidden"
						name="subjet"
						value="Nuevo mensaje desde Portfolio"
					/>
					<label for="nombre"></label>Nombre

					<input type="text" id="nombre" name="nombre" required />
					<label for="email">Email</label>
					<input type="text" id="email" name="email" required />
					<label for="mensaje">Mensaje</label>
					<textarea rows="10" id="mensaje" name="mensaje" required
					></textarea>
					<div class="cta">
						<Button
							titulo="Enviar"
							tipo="submit"
							right_icon="fa-solid fa-arrow-right"
						/>
					</div>
				</form>
			</div>
			<div class="contacto__imagen">
				<img src="/my-astro-portfolio/contact.png" />
			</div>
		</div>
	</div>
</section>

<style lang="scss">
	.contacto {
		&__section {
			background-image: var(--background-gradient-reverse);
		}

		&__titulo {
		}

		&__content {
			display: flex;
			gap: 3rem;
			min-height: 600px;
		}

		&__form {
			width: 50%;
			form {
				display: flex;
				flex-direction: column;
				gap: 1rem;

				label {
					font-size: 1.25rem;
				}

				input,
				textarea {
					font-size: 1.1rem;
					padding: 0.5rem 0.5rem;
					background-color: transparent;
					color: var(--color-text);
				}

				input {
					border-top: 0px;
					border-left: 0px;
					border-right: 0px;
					border-color: var(--color-primary);
				}

				textarea {
					border-color: var(--color-primary);
				}

				.cta {
					margin-top: 2rem;
					width: 100%;
				}
			}
		}

		&__imagen {
			width: 50%;
			position: relative;
			// text-align: center;

			img {
				position: absolute;
				height: 100%;
				width: 100%;
				margin: 0 auto;
				object-fit: cover;
				mix-blend-mode: luminosity;
			}
		}
	}

	@media (max-width: 900px) {
		.contacto {
			&__content {
				flex-direction: column;
			}

			&__form {
				width: 100%;
			}

			&__imagen {
				width: 100%;
				height: 500px;
			}
		}
	}
</style>
